<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_network"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NetworkActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_toolbar" />

    <ImageView
        android:layout_marginTop="55dp"
        android:id="@+id/iv_network"
        android:src="@drawable/ic_network"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_bar"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txt_connect"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Você Está Sem Internet No Momento, Tente Novamente"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Tentar Conectar" />

</RelativeLayout>