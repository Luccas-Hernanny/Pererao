<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/BackgroundColorCard"
    tools:context=".activity.ui.configuration.Configuration">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/DarkMode"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:padding="19.5dp"
                android:text="@string/dark_mode"
                android:textAllCaps="false"
                app:icon="@drawable/ic_darkmode"
                app:iconGravity="start"
                app:iconSize="24dp"
                app:iconPadding="15dp"
                android:textColor="?attr/TextColor"
                android:textSize="14sp"
                android:textStyle="normal"
                app:iconTint="@null"
                app:backgroundTint="#801D2639"
                app:strokeColor="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>